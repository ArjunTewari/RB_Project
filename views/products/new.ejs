<%- layout('layouts/boilerplate') %>

<%-include('../partials/flash')%>

<div class="row"  >
    <div class="col-6 mx-auto card">
        <form action="/products" method="post" class="card-body  needs-validation" novalidate>
            <div class="mb-3">
                <label for="naam" class="col-form-label" >Name</label>
                <input type="text" class="form-control" name="name" id="naam" placeholder="Name of the products" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                 <div class="invalid-feedback">
                    Please choose a Product Name.
                </div>
            </div>
            <div class="mb-3">
                <label for="img" class="col-form-label" >Image</label>
                <input type="text" class="form-control" name="img" id="img" placeholder="Image URL" required>
            </div>
            <div class="mb-3">
                <label for="paisa" class="col-form-label" >Price</label>
                <input type="number" class="form-control" name="price" id="paisa" placeholder="price of the product" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                 <div class="invalid-feedback">
                    Please choose a Product price.
                </div>
            </div>
            <div class="mb-3">
                <label for="category" class="col-form-label" >Category</label>
                <input type="text" class="form-control" name="category" id="category" placeholder="category of the product" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                 <div class="invalid-feedback">
                    Please enter a product category .
                </div>
            </div>
            <div class="mb-3">
                <label for="desc" class="col-form-label" >Desc</label>
                <textarea type="text" class="form-control" name="desc" id="desc" rows="5" placeholder="Description of the product" required> </textarea>
            </div>
            <button class="btn btn-md btn-info">Add Product</button>
        </form>
    </div>

</div>