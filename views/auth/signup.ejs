<%- layout('layouts/boilerplate') %>

<%-include('../partials/flash')%>


<div class="row" style="margin-top: 0;">
    <div class="col-6 mx-auto  shadow w-25 h-50 p-2 mb-5 bg-body-light rounded">
        <h1 class="display-5">Sign up</h1>
        <form action="/register" method="POST">
            <div class="mb-3">
                <label for="naam" class="form-label">Username: </label>
                <input type="text" class="form-control" name="username" id="naam" placeholder="Name of Product" required>
            </div>
            <div class="mb-3">
                <label for="mail" class="form-label">Email: </label>
                <input type="email" class="form-control" name="email" id="mail" placeholder="Email of the user" required >
            </div>
            <div class="mb-3">
                <label for="umar" class="form-label">Age: </label>
                <input class="form-control" type="number" name="age" id="umar" placeholder="Age of the user" required>
            </div>
            <div class="mb-2">
                <p class="mb-2">Want to register as?</p>
                <div class="mb-3">
                    <label for="role1" class="form-label">Buyer: </label>
                    <input type="radio" name="role" id="role1" value="buyer">
                </div>
                <div class="mb-3">
                    <label for="role" class="form-label" >Seller: </label>
                    <input type="radio" name="role" id="role" value="seller">
                </div>
            </div>
            <div class="mb-3">
                <label for="pass" class="form-label">Password: </label>
                <input type="password" class="form-control" name="password" id="pass" placeholder="Password of the user" required >
            </div>
            <button type="submit" class="btn btn-sm btn-success">Register User</button>
            
            <p>Already have an account? <a href="/login">Login</a></p>
        </div>
        </form>
    </div>
</div>
